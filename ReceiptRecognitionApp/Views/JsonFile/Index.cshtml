@model JsonFileViewModel;
<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
</head>
<body>
<div>@Model.ReceiptImage.OriginalImageName</div>
<img src="data:image;base64,@System.Convert.ToBase64String(Model.ReceiptImage.OriginalImage)" width="150" height="150" alt="" />
<div>@Model.ReceiptImage.ScannedImageName</div>
<img src="data:image;base64,@System.Convert.ToBase64String(Model.ReceiptImage.ScannedImage)" width="150" height="150" alt="" />
</body>
@if (string.IsNullOrEmpty(Model.Json))
{
    <div>Json is empty!</div>
    using(Html.BeginForm("FormJson","JsonFile"))
     {
         <input type="submit" value="Create json"/>
     }
}
else
{
    <div>@Model.Json</div>
}
<div>
</div>
</html>
